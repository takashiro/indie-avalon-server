	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch",
			"program": "${workspaceFolder}/src/index.ts",
			"cwd": "${workspaceFolder}",
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: debug"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Test",
			"program": "${workspaceFolder}\\test.js",
			"args": ["--local-debug"]
		}
	]
}
